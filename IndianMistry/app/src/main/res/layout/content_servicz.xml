<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.apple.indianmistry.Servicz"
    tools:showIn="@layout/app_bar_servicz">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="26dp"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toStartOf="@+id/textView8"
        app:srcCompat="@drawable/logo"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indian Mistry"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageViewLogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="122dp"
        android:layout_marginEnd="122dp"
        android:layout_marginTop="22dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignEnd="@+id/imageViewLogo"
            android:layout_alignRight="@+id/imageViewLogo"
            android:layout_below="@+id/imageViewLogo"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="125dp"
            android:onClick="selected"
            android:tag="plumber"
            app:srcCompat="@drawable/plumber" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="125dp"
            android:layout_weight="1"
            android:onClick="selected"
            android:tag="electrician"
            app:srcCompat="@drawable/electric" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/imageViewLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/imageViewLogo"
            android:layout_alignRight="@+id/imageViewLogo"
            android:layout_below="@+id/imageViewLogo"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="125dp"
            android:onClick="selected"
            android:tag="carservice"
            app:srcCompat="@drawable/car" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="132dp"
            android:layout_weight="1"
            android:onClick="selected"
            android:tag="cleaning"
            app:srcCompat="@drawable/broom" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_alignEnd="@+id/imageViewLogo"
            android:layout_alignRight="@+id/imageViewLogo"
            android:layout_below="@+id/imageViewLogo"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="125dp"
            android:onClick="selected"
            android:tag="photographer"
            app:srcCompat="@drawable/camera" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="132dp"
            android:layout_weight="1"
            android:onClick="selected"
            android:tag="Dj"
            app:srcCompat="@drawable/dj" />


    </LinearLayout>



</RelativeLayout>
