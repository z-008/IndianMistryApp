<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.indianmistry.Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="112dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginStart="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginLeft="12dp"
        android:layout_alignLeft="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Indian Mistry"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="137dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="137dp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Phone"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="91dp"
        android:layout_marginEnd="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/editTextName"
        android:layout_alignBottom="@+id/editTextName"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/editTextName"
        android:text="+91"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/editTextName" />

    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/buttonstyleselector"
        android:text="Send OTP"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:layout_marginStart="42dp"
        android:layout_below="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginLeft="42dp"
        android:layout_toRightOf="@+id/textView10" />


</RelativeLayout>
